{
  "compilerOptions": {
    "preserveConstEnums": true,
    "removeComments": false,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": false, // Set to false to ensure type checking for all declaration files
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"], // Explicitly specify the types to include
    "paths": {
      "": ["./*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/**/*"],
  "exclude": [
    "node_modules",
    "util/scripts/intento",
    "util/scripts/cosmos-sdk",
    "util/scripts/cosmos-proto"
  ] // *** The files to not type check ***
}
