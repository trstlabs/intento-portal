{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/Query",
    "definitions": {
        "Query": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "connection_id": {
                    "type": "string"
                },
                "chain_id": {
                    "type": "string"
                },
                "query_type": {
                    "type": "string"
                },
                "request_data": {
                    "type": "string",
                    "format": "binary",
                    "binaryEncoding": "base64"
                },
                "callback_module": {
                    "type": "string"
                },
                "callback_id": {
                    "type": "string"
                },
                "callback_data": {
                    "type": "string",
                    "format": "binary",
                    "binaryEncoding": "base64"
                },
                "timeout_policy": {
                    "enum": [
                        "REJECT_QUERY_RESPONSE",
                        "RETRY_QUERY_REQUEST",
                        "EXECUTE_QUERY_CALLBACK"
                    ],
                    "type": "string",
                    "title": "Timeout Policy"
                },
                "timeout_duration": {
                    "pattern": "^([0-9]+\\.?[0-9]*|\\.[0-9]+)s$",
                    "type": "string",
                    "format": "regex"
                },
                "timeout_timestamp": {
                    "type": "string"
                },
                "request_sent": {
                    "type": "boolean"
                },
                "submission_height": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Query"
        }
    }
}